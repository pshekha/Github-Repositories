<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cvRowItem"
    android:layout_marginTop="@dimen/dimen_unit_double"
    card_view:cardElevation="@dimen/dimen_unit_half"
    card_view:cardCornerRadius="@dimen/dimen_unit_quatro"
    card_view:cardBackgroundColor="@android:color/white"
    >
    <!-- card_view:cardUseCompatPadding="true" -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearLayout1"
        android:padding="@dimen/dimen_unit_double">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:id="@+id/linearLayout2"
            android:weightSum="1">


            <TextView
                android:id="@+id/txtRepoName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                android:layout_weight=".85"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/star"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                android:id="@+id/labelStar"
                android:layout_weight=".02"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                android:id="@+id/txtStarCount"
                android:layout_weight=".13"
                />

        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtRepoDesc"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
            android:layout_marginTop="@dimen/dimen_unit_double"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtAvatar"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
            android:layout_marginTop="@dimen/dimen_unit_double"
            android:autoLink="web"
            android:textColorLink="@color/design_default_color_primary"
            />

    </LinearLayout>
</android.support.v7.widget.CardView>